<UserControl x:Class="RepositoryParser.View.UsersActivityViews.UserActivityChartView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:RepositoryParser.View.UsersActivityViews"
                xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
                xmlns:resw="clr-namespace:RepositoryParser.Properties"
                mc:Ignorable="d" 
                d:DesignHeight="600" d:DesignWidth="600"
                DataContext="{Binding Source={StaticResource Locator}, Path=Chart}"
                >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Background="{StaticResource Graphite}">
            <TextBlock Style="{StaticResource AppWhiteTextBlock}" Text="{x:Static resw:Resources.CoutOfCommitsAnalyse}" HorizontalAlignment="Center"/>
        </Border>

        <TabControl Grid.Row="1" Grid.Column="1">
            <TabItem Header="{x:Static resw:Resources.Chart}">
                <chartingToolkit:Chart x:Name="Chart" 
                                       Title="{x:Static resw:Resources.ActivityChart}" 
                                       Background="{StaticResource Grey}" 
                                       LegendTitle="{x:Static resw:Resources.Legend}"
                                       >
                    <chartingToolkit:Chart.Series>
                        <chartingToolkit:PieSeries
                            ItemsSource="{Binding KeyCollection, Mode=OneWay}"
                            DependentValueBinding="{Binding Path=Value}"
                            IndependentValueBinding="{Binding Path=Key}" 
                            Background="{StaticResource Graphite}" 
                            />
                    </chartingToolkit:Chart.Series>
                </chartingToolkit:Chart>
            </TabItem>
            <TabItem Header="{x:Static resw:Resources.List}">
                <DataGrid Grid.Row="1" Grid.Column="0"
                      ItemsSource="{Binding KeyCollection}"
                      CanUserSortColumns="True"
                      AlternatingRowBackground="{StaticResource MyRowColor}" AlternationCount="2"
                      AutoGenerateColumns="False"
                      ColumnWidth="auto"
                      >
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Key}" Header="{x:Static resw:Resources.CommitsList_Author}"/>
                        <DataGridTextColumn Binding="{Binding Value}" Header="{x:Static resw:Resources.CountOfCommits}"/>
                    </DataGrid.Columns>

                </DataGrid>
            </TabItem>
        </TabControl>

        <DockPanel Grid.Column="1" Grid.Row="2">
            <Button x:Name="SaveFileBtn" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource ExportButton}"
                    Command="{Binding ExportFileCommand}"
                    />
        </DockPanel>
        
        <Border Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="1" Background="{StaticResource MyGreen}"/>
    </Grid>
</UserControl>
