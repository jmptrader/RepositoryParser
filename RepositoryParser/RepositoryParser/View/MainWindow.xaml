<Window x:Class="RepositoryParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepositoryParser"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:conventers="clr-namespace:RepositoryParser.Conventers"
        xmlns:resw="clr-namespace:RepositoryParser.Properties"
        mc:Ignorable="d"
        Title="RepositoryAnalyser" Height="600" Width="1200"
        Icon="../Assets/Icons/Ratings Filled-50.png"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        MinHeight="450" MinWidth="800"
        >
    <Window.Resources>
        <conventers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conventers:NegativeBoolToVisibilityConventer x:Key="NegativeBoolToVisibilityConventer"/>
        <conventers:BoolToBackgroundColorConventer x:Key="BoolToBackgroundColorConventer"/>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnLoadCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="1000" Grid.Row="0">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF52802B" Offset="0" />
                    <GradientStop Color="Green" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Label x:Uid="MainTitle" 
               Grid.Row="0" Grid.Column="1" 
               FontSize="23" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"  
               Width="auto"  
               Content="{x:Static resw:Resources.MainWindowTitle}"
               />
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label x:Name="UrlLabel" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static resw:Resources.UrlAdress}"/>
            <TextBox x:Name="UrlTextBlock"
                     FontSize="16" 
                     Margin="5" 
                     Text="{Binding UrlTextBox}" 
                     Background="{Binding IsGitRepositoryPicked, Converter={StaticResource BoolToBackgroundColorConventer}}" 
                     Opacity="0.95"
                     BorderBrush="Black"
                     BorderThickness="1"
                     />
            <Button x:Name="PicFileBtn" 
                    HorizontalAlignment="Center" 
                    Content="{x:Static resw:Resources.LocalAdress}" 
                    Command="{Binding PickFileCommand}" 
                    FontSize="14" 
                    BorderThickness="0,2"
                    BorderBrush="{StaticResource MyGreen}"
                    Foreground="{StaticResource Grey}"
                    Background="{StaticResource Graphite}"
                    Padding="4"
                    FontWeight="Light"
                    />
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            
        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock Text="{x:Static resw:Resources.PickRepositoryType}" HorizontalAlignment="Center" FontSize="16"></TextBlock>
            <Border BorderBrush="{StaticResource MyGreen}" BorderThickness="0,1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="2">
                    <Button Margin="4,0" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" MinWidth="90" Command="{Binding PickGitRepositoryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Assets/Icons/Git-64.png" Height="32" Width="32"/>
                            <TextBlock Text="{x:Static resw:Resources.GitRepository}" VerticalAlignment="Center" Padding="5,0"/>
                        </StackPanel>
                    </Button>
                    <Button Margin="4,0" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" MinWidth="90" Command="{Binding PickSvnRepositoryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Assets/Icons/svn-64.ico" Height="32" Width="32"/>
                                <TextBlock Text="{x:Static resw:Resources.SvnRepository}" VerticalAlignment="Center" Padding="5,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
        
            <ListView ItemsSource="{Binding SortDataView}" Grid.Row="1" Foreground="Black">
                <ListView.View>
                    <GridView>

                        <GridViewColumn Width="40" DisplayMemberBinding="{Binding ID}">
                            <GridViewColumnHeader Content="{x:Static resw:Resources.CommitsList_ID}" 
                                                  Command="{Binding SortCommand}" 
                                                  CommandParameter="ID" 
                                                  FontWeight="DemiBold" 
                                                  MinWidth="35"
                                                  Background="{StaticResource MyGreen}"
                                                  />
                        </GridViewColumn>

                        <GridViewColumn Width="auto"  DisplayMemberBinding="{Binding Message}">
                            <GridViewColumnHeader Content="{x:Static resw:Resources.CommitsList_Message}" 
                                                  Command="{Binding SortCommand}" 
                                                  CommandParameter="Message" 
                                                  FontWeight="DemiBold" 
                                                  MinWidth="420" 
                                                  Background="{StaticResource MyGreen}"
                                                  />
                        </GridViewColumn>

                        <GridViewColumn Width="auto" DisplayMemberBinding="{Binding Author}">
                            <GridViewColumnHeader Content="{x:Static resw:Resources.CommitsList_Author}" 
                                                  Command="{Binding SortCommand}" 
                                                  CommandParameter="Author" 
                                                  FontWeight="DemiBold" 
                                                  MinWidth="130"
                                                  Background="{StaticResource MyGreen}"
                                                  />
                        </GridViewColumn>

                        <GridViewColumn Width="auto" DisplayMemberBinding="{Binding Date}">
                            <GridViewColumnHeader Content="{x:Static resw:Resources.CommitsList_Date}" 
                                                  Command="{Binding SortCommand}" 
                                                  CommandParameter="Date" 
                                                  FontWeight="DemiBold"
                                                  MinWidth="120"
                                                  Background="{StaticResource MyGreen}"
                                                  />
                        </GridViewColumn>

                        <GridViewColumn Width="auto" DisplayMemberBinding="{Binding Email}">
                            <GridViewColumnHeader Content="{x:Static resw:Resources.CommitsList_Email}"
                                                  Command="{Binding SortCommand}"
                                                  CommandParameter="Email" 
                                                  FontWeight="DemiBold"
                                                  MinWidth="150"
                                                  Background="{StaticResource MyGreen}"
                                                  />
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
   
        </Grid>

        <StackPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch">
            <Button x:Name="CloneRepositoryBtn"
                    Command="{Binding StartWorkCommand}" 
                    IsEnabled="{Binding IsCloneButtonEnabled }" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Height="50"  
                    Background="{StaticResource MyGreen}" 
                    FontSize="20" 
                    Margin="2" 
                    Padding="4" 
                    MinWidth="250"
                    >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{Binding ElementName=CloneRepositoryBtn, Path=Width}" >
                    <Image Source="../Assets/Icons/Add Database-52.png" Width="24" Margin="10,0,10,0"/>
                    <TextBlock Text="{x:Static resw:Resources.AddRepositoryButton}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <DockPanel Grid.Row="2" Grid.Column="0">
            <Button x:Name="GoToAnalisysBtn" 
                    Height="50" 
                    VerticalAlignment="Top" 
                    Command="{Binding GoToPageAnalysisCommand}" 
                    Background="{StaticResource Graphite}"
                    Foreground="{StaticResource Grey}"
                    FontWeight="Light"
                    Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{Binding ElementName=GoToAnalisysBtn, Path=ActualWidth}" >
                    <Image Source="../Assets/Icons/Analysis_grey.png" Width="24" Margin="10,0,10,0"/>
                    <TextBlock Text="{x:Static resw:Resources.AnalysisButton}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </DockPanel>

        <StackPanel Grid.Row="2" Grid.Column="2">
            <Button x:Name="ClearDataBase" 
                    Height="50" 
                    VerticalAlignment="Top" 
                    FontWeight="Light"
                    Background="{StaticResource Graphite}"
                    Foreground="{StaticResource Grey}"
                    Command="{Binding AsyncClearDBCommand}" 
                    Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{Binding ElementName=ClearDataBase, Path=ActualWidth}" >
                    <Image Source="../Assets/Icons/Delete_grey.png" Width="24" Margin="10,0,10,0"/>
                    <TextBlock Text="{x:Static resw:Resources.ClearDBButton}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="RefreshBtn" 
                    Height="50" 
                    VerticalAlignment="Top"
                    FontWeight="Light"
                    Background="{StaticResource Graphite}"
                    Foreground="{StaticResource Grey}"
                    Command="{Binding RefreshCommand}" 
                    Margin="0,0,0,5"
                    Padding="0"
                    >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{Binding ElementName=RefreshBtn, Path=ActualWidth}" >
                        <Image Source="../Assets/Icons/Refresh_grey.png" Width="24" Margin="10,0,10,0"/>
                        <TextBlock Text="{x:Static resw:Resources.RefreshButton}" VerticalAlignment="Center"/>
                    </StackPanel>
            </Button>
                    
            <Button x:Name="Save"
                    Height="50" 
                    VerticalAlignment="Bottom" 
                    Background="{StaticResource Graphite}"
                    Foreground="{StaticResource Grey}" 
                    Command="{Binding ExportFileCommand}"
                    FontWeight="Light"
                    Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{Binding ElementName=Save, Path=ActualWidth}" >
                    <Image Source="../Assets/Icons/Export_grey.png" Width="24" Margin="10,0,10,0"/>
                    <TextBlock Text="{x:Static resw:Resources.ExportToFileButton}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        
<!--        <StatusBar Grid.Row="1" Grid.Column="0" 
                   Grid.RowSpan="2"
                   Grid.ColumnSpan="3"
                   Visibility="{Binding ProgressBarVisibility, Converter={StaticResource BoolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" 
                   Opacity="0.9"
                   Background="{StaticResource Grey}"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   >
        </StatusBar>-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" 
                    Grid.Column="0" Grid.RowSpan="5"
                    Grid.ColumnSpan="3" 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding ProgressBarVisibility, Converter={StaticResource BoolToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}"
                    >
            <Controls:ProgressRing HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsActive="{Binding ProgressBarVisibility}"
                                       Width="100"
                                       Height="18"
                                       Margin="3"
                                       Opacity="1"
                                        Foreground="{StaticResource MyGreen}"
                                       />
            <Separator/>
            <TextBlock Text="{x:Static resw:Resources.ProgressBarText}" Foreground="{StaticResource MyGreen}" FontSize="18" Visibility="{Binding IsOpening, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <TextBlock Text="{x:Static resw:Resources.ClearingDataBase}" Foreground="{StaticResource MyGreen}" FontSize="18" Visibility="{Binding IsOpening, Converter={StaticResource NegativeBoolToVisibilityConventer}}"/>
        </StackPanel>
    </Grid>
</Window>
